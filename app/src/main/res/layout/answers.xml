<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_answers_page"
    android:layout_width="320dp"
    android:layout_height="450dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#E0FFFF"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_spellathon_master_title"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="SPELLATHON MASTER"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/ll1_answers"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp" >

        <Button
            android:id="@+id/button_answers_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home" />

        <Button
            android:id="@+id/button_answers_next_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Game" />

    </LinearLayout>

</LinearLayout>
